@page
@model ServiceHost.Pages.AccountModel
@{
    ViewData["Title"] = "ورود و ثبت نام";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود و ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active">ورود - ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                @if (Model.LoginMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.LoginMessage</div>
                                }
                                <form id="loginForm" method="post" asp-page-handler="Login">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label>نام کاربری</label>
                                                <input type="text" name="username" data-val="true" data-val-required="لطفاً نام کاربری را وارد کنید"
                                                       placeholder="نام کاربری" />
                                                <span class="error" data-valmsg-for="username" data-valmsg-replace="true"></span>
                                            </div>
                                            <div class="col-12">
                                                <label>کلمه عبور</label>
                                                <input type="password" name="password" data-val="true" data-val-required="لطفاً کلمه عبور را وارد کنید"
                                                        placeholder="کلمه عبور">
                                                <span class="error" data-valmsg-for="password" data-valmsg-replace="true"></span>
                                            </div>
                                            
                                            @* data-val-minlength="حداقل 6 کاراکتر نیاز است" data-val-minlength-min="6" *@

                                            @*<div class="col-sm-6">
                                            <div class="check-box d-inline-block ml-0 ml-md-2">
                                            <input type="checkbox" id="remember_me">
                                            <label for="remember_me">Remember me</label>
                                            </div>
                                            </div>*@

                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a href="#" class="forget-pass-link">رمز را فراموش کرده اید؟</a>
                                            </div>

                                            <div class="col-md-12">
                                                <button class="register-button">ورود</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">

                                @if (Model.RegisterMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.RegisterMessage</div>
                                }
                                <form id="registerForm" method="post" asp-page-handler="Register">
                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>
                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام کامل</label>
                                                <input type="text" name="fullname" value="@Model.RegisterModel?.FullName" placeholder="نام کامل"
                                                       data-val="true" data-val-required="لطفاً نام کامل را وارد کنید" />
                                                <span class="error" data-valmsg-for="fullname" data-valmsg-replace="true"></span>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام کاربری</label>
                                                <input type="text" name="username" value="@Model.RegisterModel?.Username" placeholder="نام کاربری"
                                                       data-val="true" data-val-required="لطفاً نام کاربری را وارد کنید" />
                                                <span class="error" data-valmsg-for="username" data-valmsg-replace="true"></span>
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label>موبایل</label>
                                                <input type="text" name="mobile" maxlength="11"
                                                       pattern="\d{11}" inputmode="numeric"
                                                       oninput="this.value = this.value.replace(/[^0-9]/g, '')" data-val="true"
                                                       data-val-required="لطفاً شماره موبایل را وارد کنید"
                                                       data-val-regex="شماره موبایل باید 11 رقم باشد"
                                                       data-val-regex-pattern="^\d{11}$"
                                                       placeholder="09123456789" />
                                                <span class="error" data-valmsg-for="mobile" data-valmsg-replace="true"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>کلمه عبور</label>
                                                <input type="password" name="password" placeholder="کلمه عبور"
                                                       data-val="true" data-val-required="لطفاً کلمه عبور را وارد کنید" data-val-minlength="حداقل کلمه عبور 6 کاراکتر است" data-val-minlength-min="6" />
                                                <span class="error" data-valmsg-for="password" data-valmsg-replace="true"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>تایید کلمه عبور</label>
                                                <input type="password" name="rePassword" placeholder="تایید کلمه عبور"
                                                       data-val="true" data-val-required="لطفاً تکرار کلمه عبور را وارد کنید" data-val-equalto="کلمه‌های عبور مطابقت ندارند" data-val-equalto-other="[name='password']" />
                                                <span class="error" data-valmsg-for="rePassword" data-valmsg-replace="true"></span>
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>