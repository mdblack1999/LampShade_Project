@page
@model ServiceHost.Pages.AccountModel

@{
    ViewData["Title"] = "ورود و ثبت نام";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود و ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active">ورود - ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <!-- Login -->
                            <div class="col-sm-12 col-md-12 col-lg-6">
                                @if (!string.IsNullOrEmpty(Model.LoginMessage))
                                {
                                    <div class="alert alert-danger">@Model.LoginMessage</div>
                                }

                                <form id="loginForm" method="post" asp-page-handler="Login">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <!-- Username -->
                                            <div class="col-md-12 col-12">
                                                <label asp-for="Login.Username" class="control-label">نام کاربری</label>
                                                <input asp-for="Login.Username" class="form-control" placeholder="نام کاربری" />
                                                <span asp-validation-for="Login.Username" class="text-danger"></span>
                                            </div>

                                            <!-- Password -->
                                            <div class="col-12">
                                                <label asp-for="Login.Password" class="control-label">کلمه عبور</label>
                                                <input asp-for="Login.Password" class="form-control" placeholder="کلمه عبور" type="password" />
                                                <span asp-validation-for="Login.Password" class="text-danger"></span>
                                            </div>

                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-primary mt-3">ورود</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <!-- Register -->
                            <div class="col-sm-12 col-md-12 col-lg-6">
                                @if (!string.IsNullOrEmpty(Model.RegisterMessage))
                                {
                                    var cssClass = Model.RegisterSucceeded
                                    ? "alert alert-success"
                                    : "alert alert-danger";
                                    <div class="@cssClass">
                                        @Model.RegisterMessage
                                    </div>
                                }

                                <form id="registerForm" method="post" asp-page-handler="Register" enctype="multipart/form-data">
                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>
                                        <div class="row">
                                            <!-- FullName -->
                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="RegisterModel.FullName" class="control-label">نام و نام خانوادگی</label>
                                                <input asp-for="RegisterModel.FullName" class="form-control" placeholder="نام کامل" />
                                                <span asp-validation-for="RegisterModel.FullName" class="text-danger"></span>
                                            </div>

                                            <!-- Username -->
                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="RegisterModel.Username" class="control-label">نام کاربری</label>
                                                <input asp-for="RegisterModel.Username" class="form-control" placeholder="نام کاربری" />
                                                <span asp-validation-for="RegisterModel.Username" class="text-danger"></span>
                                            </div>

                                            <!-- Mobile -->
                                            <div class="col-md-12 mb-20">
                                                <label asp-for="RegisterModel.Mobile" class="control-label">شماره همراه</label>
                                                <input asp-for="RegisterModel.Mobile"
                                                       class="form-control"
                                                       placeholder="09123456789"
                                                       maxlength="11"
                                                       inputmode="numeric" />
                                                <span asp-validation-for="RegisterModel.Mobile" class="text-danger"></span>
                                            </div>

                                            <!-- Password -->
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="RegisterModel.Password" class="control-label">کلمه عبور</label>
                                                <input asp-for="RegisterModel.Password"
                                                       class="form-control"
                                                       type="password"
                                                       placeholder="کلمه عبور" />
                                                <span asp-validation-for="RegisterModel.Password" class="text-danger"></span>
                                            </div>

                                            <!-- RePassword -->
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="RegisterModel.RePassword" class="control-label">تکرار کلمه عبور</label>
                                                <input asp-for="RegisterModel.RePassword"
                                                       class="form-control"
                                                       type="password"
                                                       placeholder="تایید کلمه عبور" />
                                                <span asp-validation-for="RegisterModel.RePassword" class="text-danger"></span>
                                            </div>

                                            <!-- ProfilePhoto -->
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="RegisterModel.ProfilePhoto" class="control-label">تصویر پروفایل</label>
                                                <input asp-for="RegisterModel.ProfilePhoto" class="form-control-file" type="file" />
                                                <span asp-validation-for="RegisterModel.ProfilePhoto" class="text-danger"></span>
                                            </div>

                                            <div class="col-12">
                                                <button class="btn btn-success">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
