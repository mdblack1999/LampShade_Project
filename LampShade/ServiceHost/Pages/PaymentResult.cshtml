@page
@model ServiceHost.Pages.PaymentResultModel
@{
    ViewData["Title"] = "نتیجه پرداخت";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">نتیجه خرید</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="./Index">صفحه اصلی</a>
                            </li>
                            <li class="active">نتیجه خرید</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                @if (Model.Result.IsSuccessful)
                {
                    <div class="alert alert-success text-center p-5 rounded shadow" data-aos="fade-up">
                        <i class="fa fa-check-circle fa-4x mb-3 text-success"></i>
                        <p class="mb-2" style="font-size: 21px; font-weight: bold;">@Model.Result.Message</p>
                        @if (!string.IsNullOrWhiteSpace(Model.Result.IssueTrackingNo))
                        {
                            <p>شماره پیگیری: <strong>@Model.Result.IssueTrackingNo</strong></p>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-danger text-center p-5 rounded shadow" data-aos="fade-up">
                        <i class="fa fa-times-circle fa-4x mb-3 text-danger"></i>
                        <p class="mb-2" style="font-size: 21px; font-weight: bold;">@Model.Result.Message</p>
                    </div>
                }

                <div class="text-center mt-4">
                    <a asp-page="./Index" class="btn btn-outline-primary px-4 py-2 rounded-pill shadow-sm">
                        بازگشت به صفحه اصلی
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>