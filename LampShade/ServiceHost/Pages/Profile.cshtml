@page
@model ServiceHost.Pages.ProfileModel

@{
    ViewData["Title"] = "حساب کاربری";
}

<div class="wrapper-page">
    <div class="panel panel-color panel-primary panel-pages">
        <div class="panel-heading bg-img">
            <div class="bg-overlay"></div>
            <h3 class="text-center m-t-10 text-white"> ویرایش اطلاعات کاربری</h3>
        </div>

        <div class="panel-body">
            <form method="post" class="form-horizontal m-t-20" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="col-xs-12">
                        <label asp-for="Profile.FullName">نام و نام خانوادگی</label>
                        <input asp-for="Profile.FullName" class="form-control input-lg" style="border-radius: 15px;" />
                        <span asp-validation-for="Profile.FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <label asp-for="Profile.Mobile">موبایل</label>
                        <input asp-for="Profile.Mobile" class="form-control input-lg" style="border-radius: 15px;" />
                        <span asp-validation-for="Profile.Mobile" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <label asp-for="Profile.Password">کلمه عبور جدید</label>
                        <input asp-for="Profile.Password" class="form-control input-lg" type="password" style="border-radius: 15px;" />
                        <span asp-validation-for="Profile.Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <label asp-for="Profile.RePassword">تکرار کلمه عبور</label>
                        <input asp-for="Profile.RePassword" class="form-control input-lg" type="password" style="border-radius: 15px;" />
                        <span asp-validation-for="Profile.RePassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label> تصویر پروفیل </label><br/>
                    @if (!string.IsNullOrEmpty(Model.Profile.CurrentPhotoPath))
                    {
                        <img src="~/ProductPictures/@Model.Profile.CurrentPhotoPath" alt="user-img" style="width:100px;height:100px;border-radius:50%;margin-right:35%;">
                    }
                    else
                    {
                        <p>عکس یافت نشد</p>
                    }
                </div>

                <div class="form-group">
                    <label asp-for="Profile.ProfilePhoto">بارگذاری عکس جدید</label>
                    <input asp-for="Profile.ProfilePhoto" class="form-control-file" type="file" />
                    <span asp-validation-for="Profile.ProfilePhoto" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-lg waves-effect waves-light">ذخیره تغییرات</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
        var resizefunc = [];
    <partial name="_ValidationScriptsPartial" />
    <script src="~/admintheme/assets/js/jquery.min.js"></script>
    <script src="~/admintheme/assets/js/bootstrap.min.js"></script>
    <script src="~/admintheme/assets/js/waves.js"></script>
    <script src="~/admintheme/assets/js/wow.min.js"></script>
    <script src="~/admintheme/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/admintheme/assets/js/jquery.scrollTo.min.js"></script>
    <script src="~/admintheme/assets/jquery-detectmobile/detect.js"></script>
    <script src="~/admintheme/assets/fastclick/fastclick.js"></script>
    <script src="~/admintheme/assets/jquery-slimscroll/jquery.slimscroll.js"></script>
    <script src="~/admintheme/assets/jquery-blockui/jquery.blockUI.js"></script>
}